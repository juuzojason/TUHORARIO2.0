<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<DialogPane fx:id="Dialog" expanded="true" prefHeight="100.0" prefWidth="337.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tuhorario2.Models.CharlyDialog">
   <header>
      <HBox alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="600.0"
            style="-fx-background-color: #303030; -fx-background-radius: 15 15 0 0;">
         <AnchorPane prefHeight="40.0" prefWidth="290.0">
            <Label fx:id="TitleLabel" alignment="CENTER" layoutX="73.0" layoutY="12.0" prefHeight="17.0"
                   prefWidth="170.0" text="Title" textFill="WHITE"/>
         </AnchorPane>
         <HBox alignment="CENTER" prefHeight="40.0" prefWidth="40.0">
            <Button fx:id="CloseButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                    prefHeight="14.0" prefWidth="14.0"
                    style="-fx-background-color: #C73659; -fx-background-radius: 30;" textOverrun="CLIP">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </Button>
         </HBox>
      </HBox>
   </header>
   <content>
      <VBox fx:id="ContentContainer" alignment="BOTTOM_CENTER" prefHeight="60.0" prefWidth="100.0">
         <AnchorPane prefHeight="40.0" prefWidth="200.0">
            <Button fx:id="CancelButton" layoutX="14.0" layoutY="8.0" mnemonicParsing="false" prefHeight="25.0"
                    prefWidth="75.0" style="-fx-background-color: #D74B76; -fx-background-radius: 15;" text="Cancel"
                    AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="15.0">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </Button>
            <Button fx:id="AcceptButton" layoutX="228.0" layoutY="8.0" mnemonicParsing="false" prefHeight="25.0"
                    prefWidth="75.0" style="-fx-background-color: #CAE6B2; -fx-background-radius: 15;" text="Accept"
                    AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="15.0">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </Button>
         </AnchorPane>
      </VBox>
   </content>
</DialogPane>
